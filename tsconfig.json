{
  "compilerOptions": {
    "module": "NodeNext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/scripts/**/*"]
}
